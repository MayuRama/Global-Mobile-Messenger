<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   
    tools:context=".MainActivity" 
    android:background="#f2fcf8">
    
    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#f2fcf8" >

        <AbsoluteLayout
            android:layout_width="306dp"
            android:layout_height="270dp"
            android:layout_x="7dp"
            android:layout_y="8dp"
            android:background="#dfe3e1"
            android:orientation="vertical" >
		<!-- old phone number section start -->
            <TextView
                android:id="@+id/textView2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_x="10dp"
                android:layout_y="20dp"
                android:text="Please enter your old country code and phone number"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="10dp"
                android:layout_y="75dp"
                android:text="+ "
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/txtOldcounCode"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_x="20dp"
                android:layout_y="60dp"
                android:ems="10"
                android:inputType="number" />

            <EditText
                android:id="@+id/txtOldPhone"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_x="100dp"
                android:layout_y="60dp"
                android:ems="10"
                android:hint="Old Phone number"
                android:inputType="number" />

            <!-- old phone number section end -->
            <!-- new phone number section start -->
            <TextView
                android:id="@+id/textView2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_x="10dp"
                android:layout_y="140dp"
                android:text="Please enter your new country code and phone number"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="10dp"
                android:layout_y="195dp"
                android:text="+ "
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:id="@+id/txtNewcounCode"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_x="20dp"
                android:layout_y="180dp"
                android:ems="10"
                android:inputType="number" />

            <EditText
                android:id="@+id/txtNewPhone"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_x="100dp"
                android:layout_y="180dp"
                android:ems="10"
                android:hint="New Phone number"
                android:inputType="number" />
            <!-- new phone number section end -->
        </AbsoluteLayout>
        
    </AbsoluteLayout>
</RelativeLayout>

