            android:id="@+id/button_make_message"
            android:background="@drawable/ic_action_message"
            android:layout_height="35dp"
            android:layout_width="35dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:contentDescription="@string/mail_button_description"
            >
            </ImageButton>
        
        <ImageButton
            android:id="@+id/button_make_call"
            android:background="@drawable/ic_action_call"
            android:layout_height="35dp"
            android:layout_width="35dp"
            android:layout_marginRight="50dp"
            android:layout_gravity="center"
            android:contentDescription="@string/mail_button_description"
            >
            </ImageButton>
